{
  "name": "playwright-ghost",
  "version": "0.5.1",
  "description": "Rendre un Playwright identique à un navigateur.",
  "keywords": [
    "playwright",
    "ghost",
    "polyfill",
    "headless"
  ],
  "homepage": "https://github.com/regseb/playwright-ghost#readme",
  "bugs": {
    "url": "https://github.com/regseb/playwright-ghost/issues",
    "email": "regseb@gmail.com"
  },
  "license": "MIT",
  "author": "Sébastien Règne <regseb@gmail.com> (https://github.com/regseb)",
  "funding": "https://www.paypal.me/sebastienregne",
  "files": [
    "./src/",
    "./types/"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "./plugin": "./src/extend.js",
    "./package.json": "./package.json"
  },
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "repository": "regseb/playwright-ghost",
  "type": "module",
  "scripts": {
    "lint": "metalint",
    "lint:fix": "metalint --fix",
    "lint:types": "tsc --project .tsconfig_lint.json",
    "test": "npm run test:coverage",
    "test:unit": "mocha --config test/unit/mocharc.json",
    "test:integration": "mocha --config test/integration/mocharc.json",
    "test:coverage": "stryker run",
    "jsdocs": "typedoc --tsconfig .tsconfig_jsdocs.json",
    "clean": "node .script/clean.js"
  },
  "devDependencies": {
    "@prantlf/jsonlint": "14.0.3",
    "@prettier/plugin-xml": "3.2.2",
    "@stryker-mutator/core": "8.0.0",
    "@stryker-mutator/mocha-runner": "8.0.0",
    "@types/mocha": "10.0.6",
    "@types/node": "20.11.0",
    "@types/sinon": "17.0.3",
    "eslint": "8.56.0",
    "eslint-plugin-array-func": "4.0.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jsdoc": "48.0.2",
    "eslint-plugin-mocha": "10.2.0",
    "eslint-plugin-n": "16.6.2",
    "eslint-plugin-no-unsanitized": "4.0.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-regexp": "2.2.0",
    "eslint-plugin-unicorn": "50.0.1",
    "markdownlint": "0.33.0",
    "metalint": "0.15.0",
    "mocha": "10.2.0",
    "npm-package-json-lint": "7.1.0",
    "prettier": "3.2.2",
    "sinon": "17.0.1",
    "typedoc": "0.25.7",
    "typescript": "5.3.3",
    "yaml-lint": "1.7.0"
  },
  "peerDependencies": {
    "playwright": ">=1.40.1"
  },
  "engines": {
    "node": ">=20.6.0"
  },
  "private": true
}
