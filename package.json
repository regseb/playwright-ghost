{
  "name": "playwright-ghost",
  "version": "0.3.4",
  "description": "Rendre un Playwright identique à un navigateur.",
  "keywords": [
    "playwright",
    "ghost",
    "polyfill",
    "headless"
  ],
  "homepage": "https://github.com/regseb/playwright-ghost#readme",
  "bugs": {
    "url": "https://github.com/regseb/playwright-ghost/issues",
    "email": "regseb@gmail.com"
  },
  "license": "MIT",
  "author": "Sébastien Règne <regseb@gmail.com> (https://github.com/regseb)",
  "funding": "https://www.paypal.me/sebastienregne",
  "files": [
    "./src/",
    "./types/"
  ],
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "default": "./src/index.js"
    },
    "./plugin": "./src/extend.js",
    "./package.json": "./package.json"
  },
  "main": "./src/index.js",
  "types": "./types/index.d.ts",
  "repository": "regseb/playwright-ghost",
  "type": "module",
  "scripts": {
    "lint": "metalint",
    "lint:fix": "metalint --fix",
    "lint:types": "tsc --project .tsconfig_lint.json",
    "test": "npm run test:coverage",
    "test:unit": "mocha --config test/unit/mocharc.json",
    "test:integration": "mocha --config test/integration/mocharc.json",
    "test:coverage": "stryker run .stryker.config.js",
    "jsdocs": "typedoc --tsconfig .tsconfig_jsdocs.json",
    "clean": "node .script/clean.js"
  },
  "dependencies": {
    "playwright": "1.34.3"
  },
  "devDependencies": {
    "@cliqz/adblocker-playwright": "1.26.6",
    "@prantlf/jsonlint": "14.0.3",
    "@prettier/plugin-xml": "2.2.0",
    "@stryker-mutator/core": "7.0.1",
    "@stryker-mutator/mocha-runner": "7.0.1",
    "@types/mocha": "10.0.1",
    "@types/node": "20.2.5",
    "@types/sinon": "10.0.15",
    "eslint": "8.42.0",
    "eslint-plugin-array-func": "3.1.8",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsdoc": "46.2.4",
    "eslint-plugin-mocha": "10.1.0",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-no-unsanitized": "4.0.2",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-regexp": "1.15.0",
    "eslint-plugin-unicorn": "47.0.0",
    "htmlhint": "1.1.4",
    "markdownlint": "0.29.0",
    "metalint": "0.12.0",
    "mocha": "10.2.0",
    "npm-package-json-lint": "6.4.0",
    "prettier": "2.8.8",
    "sinon": "15.1.0",
    "typedoc": "0.24.8",
    "typescript": "5.1.3",
    "yaml-lint": "1.7.0"
  },
  "engines": {
    "node": ">=18.12.0"
  },
  "private": true
}
